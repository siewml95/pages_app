
<% if @user.errors.any? %>
<h2>The following errors prevented the article from being created</h2>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
<% end %>
  <%= form_for(@user,:html => {role: "form"}) do |f| %>
  <p>
    <%= f.label :username %> <br />
    <%= f.text_field :username %>
   </p>
   <p>
     <%= f.label :email %> <br />
     <%= f.email_field :email %>
   </p>
   <p>
     <%= f.label :password %>
     <%= f.password_field :password %>
</p>

   <%= f.submit %>
<% end %>

